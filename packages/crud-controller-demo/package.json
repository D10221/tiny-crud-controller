{
  "name": "@australis/tiny-crud-controller-demo",
  "version": "0.1.0-2",
  "main": "build/index.js",  
  "license": "MIT",
  "bin": {
    "tiny-crud-controller-demo": "build/index.js"
  },
  "pkg": {
    "scripts": "build/**/*.js"
  },
  "private": true,
  "scripts": {
    "start": "node -r ts-node/register --inspect src/index.ts",
    "test": "jest --ci --env=node",
    "build": "rimraf build && tsc  -p .",
    "bundle": "rimraf bundle && pkg package.json --targets node10-win-x64,node10-linux-x64 --out-path bundle/"
  },
  "dependencies": {
    "express": "^4.16.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jest": "^23.3.9",
    "@types/uuid": "^3.4.3",
    "jest": "23.6.0",
    "pkg": "^4.3.5",
    "rimraf": "^2.6.2",
    "ts-jest": "23.10.4",
    "ts-node": "^7.0.1",
    "typescript": "3.1.6"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
